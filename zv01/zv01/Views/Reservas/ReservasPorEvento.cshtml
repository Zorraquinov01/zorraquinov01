@model IEnumerable<zv01.Models.Reserva>

@{
    ViewData["Title"] = "ReservasPorEvento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ReservasPorEvento</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Id del Evento
            </th>
            <th>
                Id de Reserva
            </th>
            <th>
                Fecha de la Reserva
            </th>
            <th>
                Está Borrado
            </th>
            <th>
                Ha Asistido
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Evento.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaReserva)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstaBorrado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HaAsistido)
            </td>
            
        </tr>
}
    </tbody>
</table>
