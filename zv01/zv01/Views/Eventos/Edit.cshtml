@model zv01.Models.Evento

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Edit</h2>


<h4>Evento</h4>
<h4>&nbsp;</h4>
<hr />
<div class="row">
    <div class="col-md-8">      
        <h4>&nbsp;</h4>
    </div>
    <div class="col-md-4">
        <form asp-action="Post" asp-controller="Eventos">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="EventName" class="control-label"></label>
                <input asp-for="EventName" class="form-control" />
                <span asp-validation-for="EventName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EventDate" class="control-label"></label>
                <input asp-for="EventDate" id="date" class="form-control" type="date" />
                <input asp-for="EventDate" id="time" name="time" class="form-control" type="time" />
                <span asp-validation-for="EventDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Place" class="control-label"></label>
                <input asp-for="Place" class="form-control" />
                <span asp-validation-for="Place" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AforoActual" class="control-label"></label>
                <input asp-for="AforoActual" class="form-control" />
                <span asp-validation-for="AforoActual" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AforoTotal" class="control-label"></label>
                <input asp-for="AforoTotal" class="form-control" />
                <span asp-validation-for="AforoTotal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Visitas" class="control-label"></label>
                <input asp-for="Visitas" class="form-control" />
                <span asp-validation-for="Visitas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea type="text" asp-for="Description" class="form-control" rows="7" cols="40"></textarea>
                @*<input asp-for="Description" class="form-control" />*@
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Upload" method="post" asp-controller="Eventos" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script>
    function readFile(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                var filePreview = document.createElement('img');
                filePreview.id = 'file-preview';
                //e.target.result contents the base64 data from the image uploaded
                filePreview.src = e.target.result;
                console.log(e.target.result);

                var previewZone = document.getElementById('file-preview-zone');
                previewZone.appendChild(filePreview);
            }

            reader.readAsDataURL(input.files[0]);
        }
    }

    var fileUpload = document.getElementById('file-upload');
    fileUpload.onchange = function (e) {
        readFile(e.srcElement);
    }

</script>